@model Elev99.Models.CollectedData

@{
    ViewData["Title"] = "Criar novo";
}

<h2>Criar</h2>

<h4>Formulário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Floor" class="control-label">Andar</label>
                <input asp-for="Floor" max="15" min="0" class="form-control" />
                <span asp-validation-for="Floor" class="text-danger">(1 - 15)</span>
            </div>
            <div class="form-group">
                <label asp-for="Elevator" class="control-label">Elevador</label>
                <select class="form-control" asp-for="Elevator">
                    <option value="">Selecione um elevador</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="E">E</option>
                </select>
                <span asp-validation-for="Elevator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shift" class="control-label">Turno</label>
                <select class="form-control " asp-for="Shift">
                    <option value="">Selecione um turno</option>
                    <option value="V">V</option>
                    <option value="N">N</option>
                    <option value="M">M</option>
                </select>
                <span asp-validation-for="Shift" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
