@model Elev99.Models.CollectedData

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Formulário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Floor" class="control-label">Andar</label>
                <input asp-for="Floor" class="form-control" />
                <span asp-validation-for="Floor" class="text-danger">(1 - 15)</span>
            </div>
            <div class="form-group">
                <label asp-for="Elevator" class="control-label">Elevador</label>
                <input asp-for="Elevator" class="form-control" />
                <span asp-validation-for="Elevator" class="text-danger">(A, B, C, D ou E)</span>
            </div>
            <div class="form-group">
                <label asp-for="Shift" class="control-label">Turno</label>
                <input asp-for="Shift" class="form-control" />
                <span asp-validation-for="Shift" class="text-danger">("V" - "N" - "M")</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
